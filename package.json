{
  "name": "Doculi",
  "description": "Doculi is a platform for document analysis and synthesis.",
  "keywords": [
    "document",
    "conversion",
    "pdf",
    "docx",
    "ocr",
    "wasm"
  ],
  "author": "starsky",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter doculi-web dev",
    "dev:desktop": "pnpm --filter doculi-desktop dev",
    "build:web": "pnpm --filter doculi-web build",
    "build:desktop": "pnpm --filter doculi-desktop build",
    "docs:dev": "pnpm --filter doculi-docs dev",
    "docs:build": "pnpm --filter doculi-docs build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  }
}
